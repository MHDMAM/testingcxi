        //-   span Account not Activated? 
        //-   button.button-major.button.button-calm.button-clear.button-major.no-padding(ng-click='activate()', translate='login.activate2')


    .loginBox.uuid-style
      div {{viewData.uuid}}
      div v{{viewData.appVersion}}