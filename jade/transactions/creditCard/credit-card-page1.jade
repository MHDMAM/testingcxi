#step2.ng-enter(ng-if='steps===1')
  .center.margin-bottom-xl
    h2(translate='transactions.cc.page2_title')

  .row
    .col-90.center-block
      h3(translate='transactions.cc.page2_subtitle2')
      .row
        .clock.col-50(ng-repeat='item in data.policyInfo track by $index')
          .item.item-checkbox
            label.checkbox 
              input(type='checkbox', name='policy{{item.policyNo}}', ng-model='item', checklist-model='viewData.selectedPolicies', checklist-value='item', ng-change='updateSelections()',  required)
            span.pol-property {{item.planName}}
            span.pol-value(ng-if="item.lineOfBiz !=='LAFT'") {{ 'transactions.medcard_replacement.policy_no'| translate}} {{item.policyNo}}
            span.pol-value(ng-if="item.lineOfBiz ==='LAFT'") {{ 'takaful.policy_no'| translate}} {{item.policyNo}}
            span.pol-value.text-wrap {{"transactions.medcard_replacement.insured_name" | translate}} {{item.insuredName}}   
                
  .row
    .col
      button.button.button-major.button-wide.center-block(ng-click='updateCreditCard()', translate='transactions.cc.next', ng-disabled='viewData.selectedPolicies.length === 0')

  .col-80.center-block.margin-top-medium
    p.strong(translate='transactions.cc.lbl_notes') 
    p(translate='transactions.cc.notes')
