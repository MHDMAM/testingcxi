.progress-container
  .progress-line
    .line
      .progress-50

    .stage(ng-class="{current:steps===1, completed:steps!==1}")
      span.step-number(ng-if='steps==1') 1
      span.step-number.ion-checkmark(ng-if='steps!=1')
      .step-label

    .stage(ng-class="{current:steps===2}")
      span.step-number 2
      .step-label


